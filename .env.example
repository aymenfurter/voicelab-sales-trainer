# Azure AI Agent Service Configuration
USE_AZURE_AI_AGENTS=false  # Set to 'true' to use Azure AI Agent Service, 'false' for instruction-based approach

# Azure AI Foundry Configuration
PROJECT_ENDPOINT=https://<AIFoundryResourceName>.services.ai.azure.com/api/projects/<ProjectName>
MODEL_DEPLOYMENT_NAME=gpt-4o

# Azure Resource Configuration
AZURE_AI_RESOURCE_NAME=your-ai-resource-name
AZURE_AI_REGION=eastus2
AZURE_AI_PROJECT_NAME=your-project-name

# Optional: Default static agent ID (if you have one pre-created)
AGENT_ID=

# Azure OpenAI Configuration (for evaluation)
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key

# Azure Speech Services (for pronunciation assessment)
AZURE_SPEECH_KEY=your-speech-key
AZURE_SPEECH_REGION=eastus

# Azure Subscription Info
SUBSCRIPTION_ID=your-subscription-id
RESOURCE_GROUP_NAME=your-resource-group